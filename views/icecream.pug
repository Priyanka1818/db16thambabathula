extends layout
 
block content
  h1= title

  div(class="container-fluid")
  div(class="row m-1")
  each i in results
    - let destination = `dispatch(\"/resource/update/?id=${i._id}\")`
    div(class="row-sm-2", class="m-1") #{i.icecreamname} - #{i.flavor} - #{i.size} - #{i.price}
    button.btn( class="btn-primary ml-1", onclick= destination) Update

  script.
    function dispatch(path){
      window.location.href=path
    }